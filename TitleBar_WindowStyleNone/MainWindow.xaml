<Window x:Class="TitleBar_WindowStyleNone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TitleBar_WindowStyleNone"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Title Bar" Grid.Column="0"/>
            <UniformGrid Grid.Column="1" Rows="1">
                <Button Name="btnMinimize" Click="btnMinimize_Click" Content="_"/>
                <Button Name="btnMaximize" Click="btnMaximize_Click" Content="[]"/>
                <Button Name="btnClose" Click="btnClose_Click" Content="X"/>
            </UniformGrid>
        </Grid>
        <TextBlock Text="1111" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
